{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "typeRoots" : ["node_modules/@types"],
    "outDir": "bin/",
    "sourceMap": true,
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "strictNullChecks": false,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/*"
  ]
}